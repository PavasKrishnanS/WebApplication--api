@model IEnumerable<WebApplication1.Models.CustomerViewModel>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<h2>Customer List</h2>

<br />
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Customer</a>
</p>
<br/>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>
                      
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" }) |
                        <a href="#" onclick="confirmDelete(@item.Id); return false;" class="btn btn-danger btn-sm">Delete</a>

                        <form id="delete-form-@item.Id" action="@Url.Action("Delete", new { id = item.Id })" method="post" style="display:none;">
                            @Html.AntiForgeryToken()
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No customers found.</p>
}

<script>
    function confirmDelete(customerId) {
        // Display a confirmation dialog
        if (confirm('Are you sure you want to delete this customer?')) {
            // If confirmed, submit the form
            document.getElementById('delete-form-' + customerId).submit();
        }
    }
</script>